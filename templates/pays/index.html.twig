{% extends 'base.html.twig' %}

{% block title %}Pays index{% endblock %}

{% block body %}
    <h1>Pays index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Alpha2</th>
                <th>Alpha3</th>
                <th>Nom_en_gb</th>
                <th>Nom_fr_fr</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pay in pays %}
            <tr>
                <td>{{ pay.id }}</td>
                <td>{{ pay.code }}</td>
                <td>{{ pay.alpha2 }}</td>
                <td>{{ pay.alpha3 }}</td>
                <td>{{ pay.nomEnGb }}</td>
                <td>{{ pay.nomFrFr }}</td>
                <td>{{ pay.createdAt ? pay.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ pay.updatedAt ? pay.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_pays_show', {'id': pay.id}) }}">show</a>
                    <a href="{{ path('app_pays_edit', {'id': pay.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_pays_new') }}">Create new</a>
{% endblock %}
