<div class="header">
    <h1 class="header-title">
        Liste des Utilisateurs
    </h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_tiers_index') }}">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="{{ path('app_tiers_index') }}">Utilisateurs</a></li>
        </ol>
    </nav>
</div>

{{ form_start(form) }}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Saisie de vos donn√©es</h5>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-12 col-lg-12">
                        <div class="mb-3">
                            {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.password) }}
                            <div class="input-group">
                                {{ form_widget(form.password, {'attr': {'class': 'form-control', 'type': 'password', 'id': 'passwordInput'}}) }}
                                <div class="input-group-append">
                                    <span class="input-group-text bg-transparent" id="togglePassword">
                                        <i class="bx bx-hide"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.isVerified, {'id': 'flexSwitchCheckDanger', 'attr': {'class': 'form-check-input custom-checkbox', 'role': 'switch'}}) }}
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-success px-4">{{ button_label|default('Enregistrer') }}</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}
