    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tt_code</th>
                <th>Tt_lib</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type_tier in type_tiers %}
