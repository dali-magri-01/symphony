{% extends 'base.html.twig' %}

{% block title %}Journal index{% endblock %}

{% block body %}
    <h1>Journal index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Jl_code</th>
                <th>Jl_lib</th>
                <th>Mois_exer</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for journal in journals %}
            <tr>
                <td>{{ journal.id }}</td>
                <td>{{ journal.jlCode }}</td>
                <td>{{ journal.jlLib }}</td>
                <td>{{ journal.moisExer }}</td>
                <td>
                    <a href="{{ path('app_journal_show', {'id': journal.id}) }}">show</a>
                    <a href="{{ path('app_journal_edit', {'id': journal.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_journal_new') }}">Create new</a>
{% endblock %}
