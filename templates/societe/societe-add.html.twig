{% extends 'base.html.twig' %}


{% block body %}
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
        <div class="breadcrumb-title pe-3"></div>
        <div class="ps-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 p-0">
                    <li class="breadcrumb-item"><a href="javascript:"><i class="bx bx-home-alt"></i></a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page"><a href="{{ path('societe_list')}}"> Société</a></li>
                    {% if societe %}
                        <li class="breadcrumb-item active" aria-current="page">Modifier</li>
                    {% else %}
                        <li class="breadcrumb-item active" aria-current="page">Ajouter</li>
                    {% endif %}


                </ol>
            </nav>
        </div>
    </div>
    <form method="post" enctype="multipart/form-data">
        <div class="page-content">
            <h6 class="text-uppercase"></h6>
            <div id="stepper1" class="bs-stepper">
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form, { 'attr': { 'enctype': 'multipart/form-data' } }) }}
                        <div class="bs-stepper-content">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-10">
                                            {% if fileExists %}
                                                <a href="{{ asset(filePath) }}" target="_blank">
                                                    <img src="{{ filePath }}" alt="Logo" style="max-width: 100px; box-shadow: 0 0 0 0.1px #000;   border-radius: 50%;">
                                                </a>
                                            {% else %}
                                            {% endif %}
                                        </div>
                                        <div class="col-2">
                                            <div class="d-flex justify-content-end">
                                                <button class="btn btn-success px-4">Enregistrer</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row row-cols-1 row-cols-lg-2 row-cols-xl-2">
                                    <div class="col">
                                        <h6 class="mb-0 text-uppercase"></h6>
                                        <hr/>
                                        <div class="card">
                                            <div class="card-body">
                                                <div id="test-l-1" role="tabpanel" class="bs-stepper-pane" aria-labelledby="stepper1trigger1">
                                                        <h5 class="mb-1"></h5>
                                                        <p class="mb-4">Informations: </p>

                                                        <div class="row g-3">
                                                        <div class="col-12 col-lg-6">
                                                            {{ form_label(form.libelle) }}
                                                            {{ form_widget(form.libelle, {'attr': {'class': 'form-control'}}) }}
                                                        </div>
                                                        <div class="col-12 col-lg-6">
                                                            {{ form_label(form.matriculeFiscale) }}
                                                            {{ form_widget(form.matriculeFiscale, {'attr': {'class': 'form-control'}}) }}
                                                            {{ form_errors(form.matriculeFiscale, { 'attr': {'class': 'error-message'} }) }}

                                                        </div>
                                                        <div class="col-12 col-lg-6">
                                                            {{ form_label(form.rc) }}
                                                            {{ form_widget(form.rc, {'attr': {'class': 'form-control'}}) }}
                                                         </div>
                                                            <div class="col-12 col-lg-6">
                                                                {{ form_label(form.Devise_id) }}
                                                                {{ form_widget(form.Devise_id) }}
                                                            </div>


                                                        <div class="col-12 col-lg-8">
                                                            {{ form_row(form.Filename, {'attr': {'class': 'form-control'}}) }}
                                                        </div>
                                                            <div class="col-12 col-lg-4"><br>
                                                                <div class="form-check form-switch form-check-danger">&nbsp;&nbsp;&nbsp;
                                                                    {{ form_label(form.actif) }}
                                                                    {{ form_widget(form.actif, {
                                                                        'id': 'flexSwitchCheckDanger',
                                                                        'attr': {'class': 'form-check-input custom-checkbox', 'role': 'switch'},

                                                                    }) }}
                                                                </div>
                                                            </div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <h6 class="mb-0 text-uppercase"></h6>
                                        <hr/>
                                        <div class="card">
                                            <div class="card-body">
                                                <div id="test-l-1" role="tabpanel" class="bs-stepper-pane" aria-labelledby="stepper1trigger1">
                                                    <h5 class="mb-1"></h5>
                                                    <p class="mb-4">Adresse: </p>
                                                     <div class="row g-3">
                                                         <div class="col-12 col-lg-6">
                                                             {{ form_label(form.pays_id) }}
                                                             {{ form_widget(form.pays_id) }}
                                                         </div>
                                                        <div class="col-12 col-lg-6">
                                                        {{ form_label(form.rue) }}
                                                        {{ form_widget(form.rue, {'attr': {'class': 'form-control'}}) }}
                                                    </div>
                                                    <div class="col-12 col-lg-6">
                                                        {{ form_label(form.ville) }}
                                                        {{ form_widget(form.ville, {'attr': {'class': 'form-control'}}) }}
                                                    </div>

                                                     <div class="col-12 col-lg-6">
                                                         {{ form_label(form.CodePostal) }}
                                                         {{ form_widget(form.CodePostal, {'attr': {'class': 'form-control'}}) }}
                                                     </div>
                                                </div>
                                              </div>
                                            </div>
                                        </div>
                                    </div>
                               </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
        </div>
    </form>
{% endblock %}
