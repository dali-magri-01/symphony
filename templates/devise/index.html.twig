{% extends 'base.html.twig' %}

{% block title %}TypeTiers index{% endblock %}

{% block body %}
<h1>Create new Tiers</h1>
<div class="header">
    <h1 class="header-title">
        Devise
    </h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path ('app_tiers_index')}}">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="{{ path ('app_devise_index')}}">Devise</a></li>
        </ol>
    </nav>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-lg-3 col-xl-2">
                        </div>
                        <div class="col-lg-9 col-xl-10">
                            <form class="float-lg-end">
                                <div class="row row-cols-lg-2 row-cols-xl-auto g-2">
                                    <div class="col">
                                        <div class="position-relative">
                                            <a href="{{ path('app_devise_new')}}" class="btn btn-primary mb-3 mb-lg-0"><i class='bx bxs-plus-square'></i>Ajouter</a>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for devise in devises %}
                            <tr>
                                <td>{{ devise.code }}</td>

                                <td width="10%">
                                    <form method="post" action="{{ path('app_devise_delete', {'id': devise.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ devise.id) }}">
                                        <button class="btn"><i class="align-middle fas fa-fw fa-trash" style="color: dimgray;font-size: 1.1em;"></i></button>
                                        <a href="{{ path('app_devise_edit', {'id': devise.id}) }}"><i class="align-middle fas fa-fw fa-pen" style="color: dimgray; font-size: 1.2em;"></i></a>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

